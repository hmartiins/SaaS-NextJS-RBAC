{
  "name": "@saas-rbac/api",
  "version": "1.0.0",
  "scripts": {
    "build": "pnpm tsup src",
    "start": "node dist/http/server.js",
    "dev": "pnpm env:load tsx watch src/http/server.ts",
    "env:load": "dotenv -e ../../.env --",
    "db:migrate": "pnpm env:load prisma migrate dev",
    "db:studio": "pnpm env:load prisma studio"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.0.1",
    "@prisma/client": "5.17.0",
    "@saas-rbac/auth": "workspace:*",
    "@saas-rbac/env": "workspace:*",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.26.2",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.1.9",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@saas-rbac/eslint-config": "workspace:*",
    "@saas-rbac/prettier": "workspace:*",
    "@saas-rbac/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.12.7",
    "dotenv-cli": "^7.4.2",
    "prisma": "^5.17.0",
    "tsx": "^4.7.2",
    "tsup": "^8.2.4"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "prettier": "@saas-rbac/prettier",
  "eslintConfig": {
    "extends": [
      "@saas-rbac/eslint-config/library"
    ]
  }
